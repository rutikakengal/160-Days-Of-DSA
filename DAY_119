# 3583. Count Special Triplets 

class Solution {
public:
    int specialTriplets(vector<int>& nums) {
        const int MOD = 1000000007;
        int n = nums.size();

        unordered_map<int, long long> left, right;

        for (int x : nums) right[x]++;

        long long ans = 0;

        for (int j = 0; j < n; j++) {
            int x = nums[j];
            right[x]--;  // remove current from right side

            long long leftCount = left[x * 2];
            long long rightCount = right[x * 2];

            ans = (ans + (leftCount * rightCount) % MOD) % MOD;

            left[x]++;  // add current to left side
        }

        return ans;
    }
};
