# 1716. Calculate Money in Leetcode Bank

class Solution {
public:
    int totalMoney(int n) {
        int weeks = n / 7;
        int days = n % 7;
        int total = 0;

        // Money saved in complete weeks
        total += (weeks * (7 * (weeks + 1))) / 2 + 21 * weeks;

        // Money saved in remaining days
        for (int i = 1; i <= days; ++i) {
            total += weeks + i;
        }
        return total;
    }
};
