# 1975. Maximum Matrix Sum
class Solution {
public:
    long long maxMatrixSum(vector<vector<int>>& matrix) {
        long long sum = 0;
        int neg = 0;
        int mn = INT_MAX;
        
        for (auto &row : matrix) {
            for (int x : row) {
                if (x < 0) neg++;
                sum += llabs(x);
                mn = min(mn, abs(x));
            }
        }
        
        if (neg % 2 == 0) return sum;
        return sum - 2LL * mn;
    }
};
