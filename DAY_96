# 1513. Number of Substrings With Only 1s

class Solution {
public:
    int numSub(string s) {
        const long long mod = 1000000007;
        long long count = 0, ans = 0;
        for(char c : s){
            if(c == '1') count++;
            else{
                ans = (ans + count * (count + 1) / 2) % mod;
                count = 0;
            }
        }
        ans = (ans + count * (count + 1) / 2) % mod;
        return ans;
    }
};
