# 3190. Find Minimum Operations to Make All Elements Divisible by Three

class Solution {
public:
    int minimumOperations(vector<int>& nums) {
        int ops = 0;
        for (int num : nums) {
            int rem = num % 3;
            if (rem != 0) ops += min(rem, 3 - rem);
        }
        return ops;
    }
};
