# 2327. Number of People Aware of a Secret 
class Solution {
public:
    int peopleAwareOfSecret(int n, int delay, int forget) {
        const int MOD = 1e9 + 7;
        
        vector<long long> dp(n + 1, 0); 
        dp[1] = 1;  // On day 1, one person knows the secret
        
        long long share = 0;  // number of people able to share on day i
        
        for (int day = 2; day <= n; day++) {
            // People who can start sharing today
            if (day - delay >= 1) share = (share + dp[day - delay]) % MOD;
            
            // People who forget today
            if (day - forget >= 1) share = (share - dp[day - forget] + MOD) % MOD;
            
            // dp[day] = new people who learn today
            dp[day] = share;
        }
        
        // Count people who still remember at the end of day n
        long long result = 0;
        for (int day = n - forget + 1; day <= n; day++) {
            if (day >= 1) result = (result + dp[day]) % MOD;
        }
        
        return (int)result;
    }
};
