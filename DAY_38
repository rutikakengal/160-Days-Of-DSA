# 3484. Design Spreadsheet 

#include <bits/stdc++.h>
using namespace std;

class Spreadsheet {
private:
    vector<vector<int>> grid;
    int rows;

    // Convert "A1" -> (row, col)
    pair<int,int> parseCell(const string &cell) {
        int col = cell[0] - 'A';
        int row = stoi(cell.substr(1)) - 1; 
        return {row, col};
    }

    // Get value from either cell or integer
    int getOperandValue(const string &op) {
        if (isdigit(op[0])) { // number
            return stoi(op);
        } else { // cell reference
            auto [r, c] = parseCell(op);
            if (r < rows && c < 26) {
                return grid[r][c];
            }
            return 0; // out of range (shouldn't happen with valid input)
        }
    }

public:
    Spreadsheet(int rows) {
        this->rows = rows;
        grid.assign(rows, vector<int>(26, 0));
    }
    
    void setCell(string cell, int value) {
        auto [r, c] = parseCell(cell);
        grid[r][c] = value;
    }
    
    void resetCell(string cell) {
        auto [r, c] = parseCell(cell);
        grid[r][c] = 0;
    }
    
    int getValue(string formula) {
        // formula format: "=X+Y"
        string expr = formula.substr(1); // remove '='
        int plusPos = expr.find('+');
        string left = expr.substr(0, plusPos);
        string right = expr.substr(plusPos + 1);

        int val1 = getOperandValue(left);
        int val2 = getOperandValue(right);
        return val1 + val2;
    }
};
